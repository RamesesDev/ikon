<server>
  <mbean code="org.jboss.varia.property.SystemPropertiesService" name="rameses:ikon=Service,name=SystemProperties">
    <attribute name="URLList">
      ./apps/ikon.ear/META-INF/app.conf
    </attribute>
  </mbean>
  
  <mbean code="com.rameses.server.cluster.ClusterService" name="rameses:ikon=ClusterService">
	<depends proxy-type="attribute">jboss.jdbc:datasource=ikon_system,service=metadata</depends>
	<attribute name="HostName">${hostname}</attribute>
  </mbean>

  <mbean code="com.rameses.eserver.ServerMgmt" name="rameses:ikon=ServerMgmt">
	<depends>jboss.jdbc:datasource=ikon_system,service=metadata</depends>
  </mbean>

  <mbean code="com.rameses.server.session.SessionService" name="rameses:ikon=SessionService">
	<depends>jboss.jdbc:datasource=ikon_system,service=metadata</depends>
	<depends  optional-attribute-name="Cluster" proxy-type="com.rameses.server.cluster.ClusterServiceMBean">rameses:ikon=ClusterService</depends>
	<attribute name="Timeout">180000</attribute>
  </mbean>

  <mbean code="com.rameses.cache.CacheService" name="rameses:ikon=CacheService">
	<depends  optional-attribute-name="Cluster" proxy-type="com.rameses.server.cluster.ClusterServiceMBean">rameses:ikon=ClusterService</depends>
	<attribute name="ScriptHandler">CacheServiceHandler</attribute>
  </mbean>

  <mbean code="com.rameses.eserver.TemplateService" name="rameses:ikon=TemplateService">
	<depends>jboss.jdbc:datasource=ikon_system,service=metadata</depends>
  </mbean>

  <mbean code="com.rameses.scheduler2.SchedulerService" name="rameses:ikon=SchedulerService">
	<depends>jboss.jdbc:datasource=ikon_system,service=metadata</depends>
	<depends>jboss.j2ee:ear=ikon.ear,jar=rameses-server.jar,name=ScriptService,service=EJB3</depends>
	<depends optional-attribute-name="Session" proxy-type="com.rameses.server.session.SessionServiceMBean">rameses:ikon=SessionService</depends>
	<depends optional-attribute-name="Cluster" proxy-type="com.rameses.server.cluster.ClusterServiceMBean">rameses:ikon=ClusterService</depends>
  </mbean>
  
  <!--
  <mbean code="com.rameses.eserver.ScriptDeployer" name="rameses:ikon=ScriptDeployer">
	<depends>jboss.j2ee:ear=ikon.ear,jar=rameses-server.jar,name=ScriptService,service=EJB3</depends>
	<depends>rameses:ikon=CacheService</depends>
	<depends>jboss.jdbc:datasource=ikon_system,service=metadata</depends>
  </mbean>
  -->
  
  <mbean code="org.jboss.mail.MailService" name="jboss:ikon=Mail">
    <attribute name="JNDIName">ikon/Mail</attribute>
    <attribute name="User">${mailuser}</attribute>
    <attribute name="Password">${mailpwd}</attribute>
    <attribute name="Configuration">
      <configuration>
		<property name="mail.smtp.starttls.enable" value="true"/>  
        <property name="mail.transport.protocol" value="smtp"/>
        <property name="mail.smtp.host" value="smtp.gmail.com"/>
        <property name="mail.smtp.port" value="587"/>
        <property name="mail.from" value="${mailfrom}"/>
        <property name="mail.smtp.auth" value="true"/>  
        <property name="mail.debug" value="false"/>
      </configuration>
    </attribute>
    <depends>jboss:service=Naming</depends>
  </mbean>
  
</server>
