import com.rameses.annotations.*;

class EnrollmentService 
{

	@PersistenceContext("main")
	def em;
	
	@Service("DateService")
	def dateSvc;
	
	@Env
	def env;

	
	@ProxyMethod
	public void enroll( form ) {
		form.classes.each{
			try {
				it.studentid = env.objid;
				it.schooltermid = form.schooltermid;
				em.create("class:enrollee", it);
			}
			catch(e) {
				e.printStackTrace();
				throw e;
			}
		};
	}
	
	@ProxyMethod
	public def checkEnrollment() {
		def state = em.sqlContext.createNamedQuery('enrollment:check-enrolled-state').setParameter('studentid', env.objid).singleResult;
		state.pending = state.pending? true : false;
		state.active = state.active? true : false;
		return state;
	}
	
	@ProxyMethod
	public def getPendingEnrollment() {
		def list = em.sqlContext.createNamedQuery( "enrollment:get-pending-classes").setParameter('studentid', env.objid).resultList;
		list.each {
			it.schedules = em.sqlContext.createNamedQuery("class:class-schedules").setParameters( [classid:it.objid] ).resultList;
		}
		return list;
	}

}